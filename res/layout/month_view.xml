<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent">
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center" android:id="@+id/monthDateTxt" android:textSize="24dp" android:text="..."></TextView>
    <LinearLayout android:layout_width="fill_parent" android:layout_height="wrap_content">
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1" android:text="   Mån "></TextView>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=" Tis " android:layout_weight="1"></TextView>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=" Ons " android:layout_weight="1"></TextView>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=" Tor " android:layout_weight="1"></TextView>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=" Fre " android:layout_weight="1"></TextView>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=" Lör " android:layout_weight="1"></TextView>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text=" Sön " android:layout_weight="1"></TextView>
    </LinearLayout>
    <GridView android:numColumns="7" android:layout_width="fill_parent" android:layout_height="fill_parent" android:id="@+id/monthGridView" android:horizontalSpacing="4sp"></GridView>
</LinearLayout>
